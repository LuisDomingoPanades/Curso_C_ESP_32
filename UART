const int PWMpin=32;
const int potPin=34;
const int freq=5000;
const int ledChannel=0;
const int resolution=8;
float Voltage;
int duty;
int seg=0;
int dutyPWM;

void setup() {
  Serial.begin(115200);
  ledcSetup(ledChannel,freq,resolution);
  ledcAttachPin(PWMpin, ledChannel);
}

void loop() {
  if(Serial.available()) // if there is data comming
  {
    String command = Serial.readStringUntil('\n'); // read string until meet newline character
    seg=0;
    if(command == "ADC")
    {
      potValue=analogRead(potPin);
      Serial.println(potValue); // send action to Serial Monitor
    }
    else if(command.startsWith("ADC("))
    {
      int length=strlen(command);
      command.remove(length-1);
      command.remove(0,4);
      seg=command.toInt();
      Serial.println(potValue); // send action to Serial Monitor
      
    }
    else
    if(command== "PWM(x)")
    {
     int length=strlen(command);
      command.remove(length-1);
      command.remove(0,4); 
      duty=command.toInt();
      dutyPWM=(duty*255)/9
    }
  }
  if (seg>0) 
  {
  potValue=analogRead(potPin);
  Voltage=potValue*3.3/4095;
  serial.println(potValue);
  serial.println(Voltage);
  delay(seg*1000);
  }
  if (duty>0) 
  {
  ledcWrite(ledChannel,DutyPWM)
  
  }
}
