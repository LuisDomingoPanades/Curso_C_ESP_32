#include <MPU9250.h>


MPU9250 mpu;
float prevmillis=0;
float prevmillis_1=0;
float AccX;
float AccY;
float AccZ;
void setup() {
    Serial.begin(115200);
    Wire.begin();
    delay(2000);
    
    

    if (!mpu.setup(0x68)) {  // change to your own address
        while (1) {
            Serial.println("MPU connection failed. Please check your connection with `connection_check` example.");
            delay(5000);
        }
    }
}


void loop() {
    if (mpu.update()){
        if (100<(millis()-prevmillis)) {
            muestrea();
        }
      }
    if (1000<(millis()-prevmillis_1)) {
        prevmillis_1=millis();
        print_acc();
    }
}
void muestrea() {
        prevmillis=millis();
        AccX=mpu.getAccX();
        AccY=mpu.getAccY();
        AccZ=mpu.getAccZ();
}
void print_acc() {
    Serial.print("Acceleration X,Y,Z ");
    Serial.print(AccX, 2);
    Serial.print(", ");
    Serial.print(AccY, 2);
    Serial.print(", ");
    Serial.println(AccZ, 2);
}
